<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">LogIn</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation">

            <!-- Username field -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
            <input 
            type="text" 
            id="username"
            name="username"
            class="form-control"
            required>
            <div class="invalid-feedback">Enter the username</div>
            </div>

            <!-- Password field -->
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
            <input 
            type="password" 
            id="password"
            name="password"
            class="form-control"
            required>
            <div class="invalid-feedback">password must be enter!</div>
            </div>
            <button class="btn btn-success">LogIn</button>
        </form>
    </div>
</div>