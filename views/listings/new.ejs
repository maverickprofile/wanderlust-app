<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2" >
            <br><br>
    <h3>Create a New Listings</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input 
        type="text" 
        name="listing[title]"               
        placeholder="Title" 
        class="form-control"
        required>
        <div class="valid-feedback">Title looks good!</div><div class="invalid-feedback">Enter the title</div>
        </div>
        
        <div class="mb-3">
            <label for="description" 
class="form-label">Description</label>
            <textarea   
            name="listing[description]"
            class="form-control"
            required
            ></textarea>
            <div class="invalid-feedback">Enter a short Description</div>
            <div class="valid-feedback">Catchy Description</div>
        </div>

        <div class="mb-3">
        <label 
            for="image" 
            class="form-label">Upload Image
        </label>
        <input 
        type="file" 
        name="listing[image]"
        class="form-control"
        required>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
            <input 
            name="listing[price]" 
            placeholder="Price" 
            class="form-control"
            required>
            <div class="invalid-feedback">Enter a Valid Price</div>
            </div>
    
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Country" class="form-control"
                required>
                <div class="invalid-feedback">Enter the country name</div>
               </div>
        </div>

        
       <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" placeholder="Location" class="form-control"
        required>
        <div class="invalid-feedback">Enter the location name</div>
       </div>
        
       
       <br><br>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
    <br><br>
</div>
</div>